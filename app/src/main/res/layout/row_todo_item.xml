<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp">

    <View
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <CheckBox
        android:id="@+id/item_checkbox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/item_container"
        app:layout_constraintBottom_toBottomOf="@+id/item_container"
        app:layout_constraintTop_toTopOf="@+id/item_container"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUMMY TEXT"
        app:layout_constraintBottom_toBottomOf="@+id/item_container"
        app:layout_constraintLeft_toRightOf="@id/item_checkbox"
        app:layout_constraintTop_toTopOf="@+id/item_container" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="02/05/2020"
        app:layout_constraintBottom_toBottomOf="@id/item_container"
        app:layout_constraintRight_toLeftOf="@+id/delete_item"
        app:layout_constraintTop_toTopOf="@id/item_container" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/delete_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_container"
        app:layout_constraintBottom_toBottomOf="@+id/item_container"
        android:backgroundTint="#CD2417"
        android:text="Delete"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>